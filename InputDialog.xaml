        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Name="inputGrid" Grid.Row="0" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="10">
                <Button Name="okButton" Content="OK" Width="75" Margin="0,0,10,0" Click="okButton_Click"/>
                <Button Name="cancelButton" Content="Cancel" Width="75" Click="cancelButton_Click"/>
            </StackPanel>
